{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Orders list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Products</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Company</th>
                <th>Communicationmethod</th>
                <th>Communicationvalue</th>
                <th>Shippingstreetaddressone</th>
                <th>Shippingstreetaddresstwo</th>
                <th>Shippingcity</th>
                <th>Shippingstate</th>
                <th>Shippingzipcode</th>
                <th>Billingstreetaddressone</th>
                <th>Billingstreetaddresstwo</th>
                <th>Billingcity</th>
                <th>Billingstate</th>
                <th>Billingzipcode</th>
                <th>Deliverymethod</th>
                <th>Deliveryinstructions</th>
                <th>Schedule</th>
                <th>Couponcodes</th>
                <th>Comments</th>
                <th>Eventlogs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('orders_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.products }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.company }}</td>
                <td>{{ entity.communicationMethod }}</td>
                <td>{{ entity.communicationValue }}</td>
                <td>{{ entity.shippingStreetAddressOne }}</td>
                <td>{{ entity.shippingStreetAddressTwo }}</td>
                <td>{{ entity.shippingCity }}</td>
                <td>{{ entity.shippingState }}</td>
                <td>{{ entity.shippingZipCode }}</td>
                <td>{{ entity.billingStreetAddressOne }}</td>
                <td>{{ entity.billingStreetAddressTwo }}</td>
                <td>{{ entity.billingCity }}</td>
                <td>{{ entity.billingState }}</td>
                <td>{{ entity.billingZipCode }}</td>
                <td>{{ entity.deliveryMethod }}</td>
                <td>{{ entity.deliveryInstructions }}</td>
                <td>{{ entity.schedule }}</td>
                <td>{{ entity.couponCodes }}</td>
                <td>{{ entity.comments }}</td>
                <td>{{ entity.eventLogs }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('orders_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('orders_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('orders_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
