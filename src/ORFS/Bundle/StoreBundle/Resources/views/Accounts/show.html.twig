{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Accounts</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Customerid</th>
                <td>{{ entity.customerId }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Timecreated</th>
                <td>{{ entity.timeCreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Timelastactive</th>
                <td>{{ entity.timeLastActive|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Isverified</th>
                <td>{{ entity.isVerified }}</td>
            </tr>
            <tr>
                <th>Orders</th>
                <td>{{ entity.orders }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ entity.company }}</td>
            </tr>
            <tr>
                <th>Communicationmethod</th>
                <td>{{ entity.communicationMethod }}</td>
            </tr>
            <tr>
                <th>Communicationvalue</th>
                <td>{{ entity.communicationValue }}</td>
            </tr>
            <tr>
                <th>Streetaddressone</th>
                <td>{{ entity.streetAddressOne }}</td>
            </tr>
            <tr>
                <th>Streetaddresstwo</th>
                <td>{{ entity.streetAddressTwo }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ entity.state }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ entity.zipCode }}</td>
            </tr>
            <tr>
                <th>Paymentmethods</th>
                <td>{{ entity.paymentMethods }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('accounts') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('accounts_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
