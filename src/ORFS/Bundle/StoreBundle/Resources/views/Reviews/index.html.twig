{% extends 'ORFSStoreBundle:Parts:base.html.twig' %}

{% block body -%}
    <h1>Reviews list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rating</th>
                <th>Name</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reviews_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rating }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.text }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('reviews_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reviews_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('reviews_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
